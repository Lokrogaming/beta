  <script>
    /* Beispiel: Datenstruktur für Server-Details. In realem Projekt durch API/JSON ersetzen. */
    const serverData = {
      alpha:{
        title:'Alpha Server',
        desc:'Community für Entwickler und Hobby-Projekte',
        channels:['#ankündigungen','#dev','#random'],
        members:[{name:'Maja Jansen',role:'Admin'},{name:'Timo Krüger',role:'Moderator'},{name:'Alex L.',role:'Support'}]
      },
      beta:{
        title:'Beta Server',
        desc:'Gaming & Events',
        channels:['#news','#events','#matchmaking'],
        members:[{name:'Lukas',role:'Admin'},{name:'Nora',role:'Member'}]
      },
      gamma:{
        title:'Gamma Server',
        desc:'Design & Art Community',
        channels:['#showcase','#critiques','#resources'],
        members:[{name:'Sarah',role:'Moderator'},{name:'Jon',role:'Member'}]
      }
    };

    const expandArea = document.getElementById('expandArea');
    const serverButtons = document.querySelectorAll('.server');

    function createExpandCard(key){
      const data = serverData[key];
      if(!data) return null;
      const card = document.createElement('div');
      card.className = 'expand-card';
      card.id = key + 'Card';
      card.innerHTML = `
        <div style="display:flex;align-items:center;gap:12px;">
          <div style="width:56px;height:56px;border-radius:10px;overflow:hidden"><img src=\"https://via.placeholder.com/256/222222/ffffff?text=${encodeURIComponent(data.title.charAt(0))}\" alt=\"${data.title}\" style=\"width:100%;height:100%;object-fit:cover\"></div>
          <div style="flex:1">
            <div style="font-weight:700">${data.title}</div>
            <div style="font-size:13px;color:var(--muted);margin-top:4px">${data.desc}</div>
          </div>
        </div>
        <div style="margin-top:10px;font-size:13px;color:var(--muted)">Channels:</div>
        <div style="margin-top:6px;display:flex;gap:8px;flex-wrap:wrap">${data.channels.map(c => `<div style=\"padding:6px 8px;border-radius:8px;background:rgba(255,255,255,0.02);font-size:13px;border:1px solid rgba(255,255,255,0.02)\">${c}</div>`).join('')}</div>
        <div style="margin-top:10px;font-size:14px;font-weight:600">Mitglieder</div>
        <div style="margin-top:6px">${data.members.map(m => `<div style=\"display:flex;align-items:center;gap:8px;padding:6px;border-radius:8px;margin-top:6px\"><div style=\"width:34px;height:34px;border-radius:50%;background:linear-gradient(180deg,var(--accent), rgba(0,0,0,0.2));display:flex;align-items:center;justify-content:center;font-weight:700\">${m.name.split(' ').map(s=>s[0]).slice(0,2).join('')}</div><div><div style=\"font-weight:600\">${m.name}</div><div style=\"font-size:12px;color:var(--muted)\">${m.role}</div></div></div>`).join('')}</div>
      `;
      return card;
    }

    function toggleServer(e){
      const btn = e.currentTarget;
      const key = btn.dataset.server;
      const existing = document.getElementById(key + 'Card');
      const isExpanded = btn.getAttribute('aria-expanded') === 'true';

      // Close if open
      if(isExpanded){
        if(existing) existing.remove();
        btn.setAttribute('aria-expanded','false');
        return;
      }

      // Otherwise close other open cards and open this one
      document.querySelectorAll('.server').forEach(s=>s.setAttribute('aria-expanded','false'));
      expandArea.innerHTML = ''; // single open card behaviour; remove if you want multiples

      const card = createExpandCard(key);
      if(card){
        expandArea.appendChild(card);
        btn.setAttribute('aria-expanded','true');
        card.scrollIntoView({behavior:'smooth', block:'nearest'});
      }
    }

    serverButtons.forEach(b => { b.addEventListener('click', toggleServer); b.addEventListener('keydown', (ev)=>{ if(ev.key === 'Enter' || ev.key === ' ') { ev.preventDefault(); toggleServer({currentTarget:b}); } }); });

  </script>
</body>
</html>

